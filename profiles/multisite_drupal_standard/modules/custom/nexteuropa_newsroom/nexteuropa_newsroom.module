/**
 * Deletes newsroom entity.
 *
 * @param string $type
 *   Type: item, topic, service, type.
 * @param int $newsroom_id
 *   Original newsroom id.
 *
 * @return null
 *   Returns nothing.
 */
function _nexteuropa_newsroom_delete_item($type, $newsroom_id) {
  switch ($type) {
    case NEXTEUROPA_NEWSROOM_TYPE:
      _nexteuropa_newsroom_taxonomy_term_delete('field_newsroom_type_id', $newsroom_id, NEXTEUROPA_NEWSROOM_TYPE_VOCABULARY);
      break;

    case NEXTEUROPA_NEWSROOM_TOPIC:
      _nexteuropa_newsroom_taxonomy_term_delete('field_newsroom_topic_id', $newsroom_id, NEXTEUROPA_NEWSROOM_TOPIC_VOCABULARY);
      break;

    case NEXTEUROPA_NEWSROOM_SERVICE:
      _nexteuropa_newsroom_taxonomy_term_delete('field_newsroom_service_id', $newsroom_id, NEXTEUROPA_NEWSROOM_SERVICE_VOCABULARY);
      break;

    case NEXTEUROPA_NEWSROOM_ITEM:
      _nexteuropa_newsroom_item_delete($newsroom_id);
      break;

    default:
      NexteuropaNewsroomHelper::set404response();
  }

  return NULL;
}

/**
 * Imports newsroom entity.
 *
 * @param string $type
 *   Type: item, topic, service, type.
 * @param int $newsroom_id
 *   Original newsroom id.
 *
 * @return string
 *   Link to the item.
 */
function _nexteuropa_newsroom_import_item($type, $newsroom_id) {
  $path = NULL;
  switch ($type) {
    case NEXTEUROPA_NEWSROOM_TYPE:
      $path = NexteuropaNewsroomImporterHelper::getTaxonomyTermImportPath($type, $newsroom_id, NEXTEUROPA_NEWSROOM_TYPE_IMPORTER);
      break;

    case NEXTEUROPA_NEWSROOM_TOPIC:
      $path = NexteuropaNewsroomImporterHelper::getTaxonomyTermImportPath($type, $newsroom_id, NEXTEUROPA_NEWSROOM_TOPIC_IMPORTER);
      break;

    case NEXTEUROPA_NEWSROOM_SERVICE:
      $path = NexteuropaNewsroomImporterHelper::getTaxonomyTermImportPath($type, $newsroom_id, NEXTEUROPA_NEWSROOM_SERVICE_IMPORTER);
      break;

    case NEXTEUROPA_NEWSROOM_ITEM:
      $path = NexteuropaNewsroomImporterHelper::getNewsroomItemImportPath($newsroom_id);
      break;

    default:
      NexteuropaNewsroomHelper::set404response();
  }

  drupal_set_message(t('The item has been imported.'));
  return l(t('Open the item'), $path);
}

