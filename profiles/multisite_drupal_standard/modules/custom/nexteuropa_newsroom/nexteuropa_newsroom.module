/**
 * Implements hook_block_view_alter().
 */
function nexteuropa_newsroom_block_view_alter(&$data, $block) {
  if ($block->module == 'easy_breadcrumb') {
    if (!empty($data['content']['easy_breadcrumb']['#breadcrumb'][0]['url']) &&
      in_array($data['content']['easy_breadcrumb']['#breadcrumb'][0]['url'], ['newsroom', 'newsroom-agenda'])
    ) {
      // Get type.
      $type = NULL;
      $type_url = 'all';
      $first_url_part = $data['content']['easy_breadcrumb']['#breadcrumb'][0]['url'];
      if (!empty($data['content']['easy_breadcrumb']['#breadcrumb'][1]['url'])) {
        $url_items = explode('/', $data['content']['easy_breadcrumb']['#breadcrumb'][1]['url']);
        if (!empty($url_items) && count($url_items) == 2) {
          $type_url = array_pop($url_items);
          $type = NexteuropaNewsroomHelper::getTermFromRequest($type_url, NEXTEUROPA_NEWSROOM_TYPE_VOCABULARY);
        }
      }

      // Get topic.
      $topic = NULL;
      $topic_url = 'all';
      if (!empty($data['content']['easy_breadcrumb']['#breadcrumb'][2]['url'])) {
        $url_items = explode('/', $data['content']['easy_breadcrumb']['#breadcrumb'][2]['url']);

        if (!empty($url_items) && count($url_items) == 3) {
          $topic_url = array_pop($url_items);
          $topic = NexteuropaNewsroomHelper::getTermFromRequest($topic_url, NEXTEUROPA_NEWSROOM_TOPIC_VOCABULARY);
        }
      }

      // Remove all items from breadcrumb, we readd it again later.
      $data['content']['easy_breadcrumb']['#breadcrumb'] = [];
      if (!empty($type)) {
        $data['content']['easy_breadcrumb']['#breadcrumb'][] = [
          'content' => NexteuropaNewsroomVocabularyHelper::getItemTypeInPlural($type->tid),
          'class' => [],
          'url' => $first_url_part . '/' . $type_url . '/all',
        ];
      }

      if (!empty($topic)) {
        $data['content']['easy_breadcrumb']['#breadcrumb'][] = [
          'content' => $topic->name,
          'class' => [],
          'url' => $first_url_part . '/' . $type_url . '/' . $topic_url . '/all',
        ];
      }

      $data['content']['easy_breadcrumb']['#segments_quantity'] = count($data['content']['easy_breadcrumb']['#breadcrumb']);
    }
  }
}

/**
 * Implements hook_preprocess_node().
 */
function nexteuropa_newsroom_preprocess_node(&$variables) {
  if ($variables['type'] == NEXTEUROPA_NEWSROOM_CONTENT_TYPE) {
    $node = $variables['node'];
    $redirect = variable_get('nexteuropa_newsroom_redirect_short_items');
    if (!empty($redirect) && in_array($variables['view_mode'],
      ['full', 'newsroom_events', 'newsroom_default'])) {
      $type = NexteuropaNewsroomVocabularyHelper::getNewsroomType(NexteuropaNewsroomHelper::getFieldValue($node, 'field_newsroom_item_type', 'tid'));
      $main_link_url = NexteuropaNewsroomHelper::getFieldTranslatedValue($node, 'field_newsroom_item_main_link', 'url');
      $teaser_only = NexteuropaNewsroomHelper::getFieldTranslatedValue($node, 'field_newsroom_teaser_only', 'value');

      if (!empty($teaser_only) && !empty($main_link_url)) {
        drupal_goto($main_link_url, [], 301);
      }

      // Redirect item if redirection is forced for this type.
      // Except for editors who can import items.
      if (!user_access(NEXTEUROPA_NEWSROOM_IMPORT_ACCESS)) {

        // Only if we have a main link and if type is click through then
        // redirect item to main link URL.
        if ($type && $main_link_url) {
          $click_through = NexteuropaNewsroomHelper::getFieldValue($type, 'field_newsroom_direct_link', 'taxonomy_term');
          if ($click_through == NEXTEUROPA_NEWSROOM_CLICKTHROUGH_FORCE) {
            drupal_goto($main_link_url, [], 301);
          }
        }
      }
    }

    // Fix contact link.
    $nr_contact_field = field_get_items('node', $node, 'field_newsroom_item_contact_text');
    $nr_contact_email_field = field_get_items('node', $node, 'field_newsroom_item_contact_mail');
    hide($variables['content']['field_newsroom_item_contact_text']);
    if ($nr_contact_email_field) {
      $nr_contact_text = !empty($nr_contact_field[0]['value']) ? $nr_contact_field[0]['value'] : $nr_contact_email_field[0]['value'];
      $variables['content']['field_newsroom_item_contact_mail'][0]['#markup'] = l($nr_contact_text, 'mailto:' . $nr_contact_email_field[0]['value'], [
        'absolute' => TRUE,
        'html' => TRUE,
      ]);
    }

    // Fix custom date visibility and label by type.
    $nr_type_field = field_get_items('node', $node, 'field_newsroom_item_type');
    $display_date = FALSE;

    if (!empty($nr_type_field[0]['taxonomy_term'])) {
      $display_date_field = field_get_items('taxonomy_term', $nr_type_field[0]['taxonomy_term'], 'field_newsroom_display_date');
      if ($display_date_field) {
        $display_date = (bool) $display_date_field[0]['value'];
      }
      if ($display_date) {
        $date_label_field = field_get_items('taxonomy_term', $nr_type_field[0]['taxonomy_term'], 'field_newsroom_date_label');
        if ($date_label_field) {
          $date_label = $date_label_field[0]['value'];
          $variables['content']['field_newsroom_item_date']['#title'] = $date_label;
        }
      }
    }
  }
}

