/**
 * Implements theme_entity_view_mode_alter().
 */
function nexteuropa_newsroom_entity_view_mode_alter(&$view_mode, $context) {
  if (!empty($context['entity']->type) && $context['entity']->type == 'newsroom_item') {
    if ($view_mode == 'newsroom_teaser') {
      return;
    }
    if (variable_get('nexteuropa_newsroom_use_default_view_mode')) {
      $view_mode = 'newsroom_default';
    }
    if ($terms = field_get_items('node', $context['entity'], 'field_newsroom_item_type')) {
      if ($term = taxonomy_term_load($terms[0]['tid'])) {
        if (!empty($term->field_newsroom_type_id[LANGUAGE_NONE][0]['value'])) {
          switch ($term->field_newsroom_type_id[LANGUAGE_NONE][0]['value']) {
            case variable_get('nexteuropa_newsroom_events_type_id'):
              $view_mode = 'newsroom_events';
              break;

            case variable_get('nexteuropa_newsroom_fundings_type_id'):
              $view_mode = 'newsroom_fundings';
              break;

            case variable_get('nexteuropa_newsroom_consultations_type_id'):
              $view_mode = 'newsroom_consultations';
              break;
          }
        }
      }
    }
  }
}

