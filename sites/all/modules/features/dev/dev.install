<?php

/**
 * @file
 * Install, update and uninstall functions for the STARTERKIT module.
 *
 * @see https://webgate.ec.europa.eu/CITnet/confluence/display/MULTISITE/Custom+features
 */

include_once 'dev.install.inc';

/**
 * Implements hook_enable().
 */

function dev_enable() {

  drupal_set_message(t('dev %v feature is now active on your site.', array('%v' => _dev_get_version())));
  // multisite_drupal_toolbox_add_block_context($contextName,$blockTitle,$module,$delta, $region,$weight='-10');
  multisite_drupal_toolbox_add_block_context('homepage', 'devel-switch_user', 'devel', 'switch_user', 'sidebar_left', $weight='8');
  multisite_drupal_toolbox_add_block_context('site_wide', 'menu-devel', 'menu', 'devel', 'sidebar_left', $weight='9');
  multisite_drupal_toolbox_add_block_context('site_wide', 'devel-execute_php', 'devel', 'execute_php', 'featured', $weight='10');
}

/**
 * Implements hook_disable().
 */
function dev_disable() {
  $modules = array('devel', 'coder', 'mail_logger');
  module_disable($modules, FALSE);
  drupal_set_message(t('dev %v feature is now inactive on your site.', array('%v' => _dev_get_version())));
}

/**
 * Implements hook_install().
 */
function dev_install() {
  //Install scripts here
}

/**
 * Implements hook_uninstall().
 */
function dev_uninstall() {
  //Uninstall scripts here
  drupal_uninstall_modules($modules, FALSE);
}
